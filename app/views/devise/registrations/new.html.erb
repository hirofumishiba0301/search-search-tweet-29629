<%= render "shared/header"%>
<div class=" align-items-center d-flex flex-column">
<%= form_with model: @user, url: user_registration_path, class: 'align-items-center ', local: true do |f| %>
<div class='form-wrap'>
  <div class='h3'>
      登録情報入力
  </div>

  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <div class='d-flex'>
      <label class="form-text">ユーザーネーム</label>
      <label class="beta btn sm">必須</label>
    </div>
    <%= f.text_area :nickname, class:"form-control", id:"nickname", placeholder:"例) Search太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='d-flex'>
      <label class="form-text">メールアドレス</label>
      <label class="beta btn sm">必須</label>
    </div>
    <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='d-flex'>
      <label class="form-text">パスワード</label>
      <label class="beta btn sm">必須</label>
    </div>
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='d-flex'>
      <label class="form-text">パスワード(確認)</label>
      <label class="beta btn sm">必須</label>
    </div>
    <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <%# プロフィール画像 %>
     <div class="form-group">
      <div class='d-flex'>
      <label class="form-text">プロフィール画像</label>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :user_image, id:"btn beta" %>
      </div>
    </div>
  <%# /プロフィール画像 %>
  <div class="form-group">
    <p class='form-info-header'>
      本人確認
    </p>
    <p class='form-info-text'>
      安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
    </p>
  </div>
  <div class="form-group">
    <div class='d-flex'>
      <label class="form-text">生年月日</label>
      <label class="beta btn sm">必須</label>
    </div>
    <div class='d-flex'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class="form-group">
  </div>
  <div class='register-btn'>
    <%= f.submit "登録" ,class:"beta btn" %>
  </div>
</div>
<% end %>
</div>
<%= render "shared/footer"%>