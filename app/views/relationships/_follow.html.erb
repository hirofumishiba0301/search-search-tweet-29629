  <% if user_signed_in? %>
    <% if current_user.follow?(@user) %>
      <%= form_for(current_user.follow_relationships.find_by(follow_id: @user.id), html: { method: :delete }) do |f| %>
        <%= f.submit "フォロー中", class: "register-red-btn" %>
      <% end %>
    <% else %>
      <%= form_for(current_user.follow_relationships.build(follow_id: @user.id)) do |f| %>
        <div><%= f.hidden_field :follow_id %></div>
        <%= f.submit "フォローする", class: "register-white-btn" %>
      <% end %>
    <% end %>
  <% end %>